<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OBSERVO.Views.Menu"
             Title="Menu">
    
    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Topo: Fechar Menu -->
        <Label Text="✕ Fechar Menu"
               FontSize="14"
               TextColor="Gray"
               HorizontalOptions="Start"
               Margin="0,10,0,20">
            <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnFecharMenuTapped" />
              </Label.GestureRecognizers>
        </Label>

        <!-- Corpo -->
        <StackLayout Grid.Row="1" Spacing="25">

            <!-- Avatar e Nome -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Frame WidthRequest="60" HeightRequest="60"
                       CornerRadius="30"
                       BackgroundColor="#D9D9D9"
                       VerticalOptions="Center"
                       HasShadow="False"
                       Padding="0">
                    <Label Text="MC"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center" />
                </Frame>

                <StackLayout VerticalOptions="Center">
                    <Label Text="MARIA CLEONICE DE MO..."
                           FontSize="14"
                           FontAttributes="Bold"
                           LineBreakMode="TailTruncation" />
                    <Label Text="013.133.853-60"
                           FontSize="12"
                           TextColor="Gray" />
                </StackLayout>
            </StackLayout>

            <BoxView HeightRequest="1" Color="#E0E0E0" />

            <!-- Opções do menu -->
            <StackLayout Spacing="20">
                <Label Text="Módulos" FontSize="14" />
                <Label Text="Configurações" FontSize="14" />
                <Label Text="Configurar perfil"
                       FontSize="14"
                       FontAttributes="Bold" />
            </StackLayout>
        </StackLayout>

        <!-- Linha cinza acima do rodapé -->
        <BoxView Grid.Row="2"
             HeightRequest="1"
             Color="LightGray"
             VerticalOptions="Start"
             HorizontalOptions="Fill" />

        <!-- Rodapé -->
        <Grid Grid.Row="2"
          Padding="10,20,10,30"
          ColumnSpacing="10"
          Margin="0,-12,0,-20">
            <!-- espaço entre a linha e o conteúdo -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Text="VERSÃO 1.0.0"
               FontSize="14"
               TextColor="Gray"
               FontAttributes="Bold"
               VerticalOptions="Center" 
               Margin="-10,0,0,0"
               CharacterSpacing="0.8"/>

            <StackLayout Grid.Column="1" Orientation="Horizontal" Spacing="0">
                <Image Source="logout.png"
                   HeightRequest="14"
                   WidthRequest="14"
                   VerticalOptions="Center" 
                       Margin="0,0,-4,0"/>
                <Button Text="Sair da conta"
                    FontSize="14"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    VerticalOptions="Center"
                    Clicked="Sair_Button_Clicked" 
                    Margin="0,0,-25,0" 
                    CharacterSpacing="0.8" />
            </StackLayout>
        </Grid>
    </Grid>

</ContentPage>