<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="OBSERVO.Views.SelectCompany"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F9F9F9">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25">

            <!--  Topo com logo e slogan  -->
            <VerticalStackLayout Spacing="8">
                <Image Source="capaselectcompany.png" />

                <Label
                    FontSize="16"
                    HorizontalTextAlignment="Start"
                    Text="A facilidade Gest-Seg, agora ao alcance das suas mãos"
                    TextColor="Gray" />
            </VerticalStackLayout>

            <!--  Pergunta  -->
            <Label
                FontAttributes="Bold"
                FontSize="18"
                HorizontalOptions="Center"
                Text="Qual é a sua empresa?"
                TextColor="#740862" />

            <!--  Campo de entrada  -->
            <Entry
                    x:Name="CompanyName"
                    BackgroundColor="Transparent"
                    FontSize="15"
                    Placeholder="Informe o nome"
                    PlaceholderColor="Gray"
                    TextColor="Black" />
            <!--  Botão  -->
            <Button
                x:Name="OnPROSSEGUIR"
                BackgroundColor="#740862"
                Clicked="OnPROSSEGUIR_Clicked"
                CornerRadius="10"
                FontAttributes="Bold"
                FontSize="15"
                HeightRequest="50"
                HorizontalOptions="Fill"
                ImageSource="prosseguir.png"
                Text="PROSSEGUIR"
                CharacterSpacing="0.8"
                TextColor="White" />

            <!--  Loading  -->
            <ActivityIndicator
                x:Name="LoadingIndicator"
                HeightRequest="40"
                HorizontalOptions="Center"
                IsRunning="False"
                IsVisible="False"
                WidthRequest="40"
                Color="#740862" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>